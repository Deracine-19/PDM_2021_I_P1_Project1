<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DefeatActivity">

    <TextView
        android:id="@+id/txvYouveLost"
        android:layout_width="287dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/codeprobold"
        android:text="@string/you_died"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnBackToMenuFromDefeat"
        android:layout_width="218dp"
        android:layout_height="63dp"
        android:layout_marginTop="17dp"
        android:text="@string/back_to_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRetry"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="218dp"
        android:layout_height="63dp"
        android:layout_marginTop="53dp"
        android:text="@string/retry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvYouveLost" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="203dp"
        android:layout_height="231dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/frame5"
        android:contentDescription="@string/todo" />
</androidx.constraintlayout.widget.ConstraintLayout>