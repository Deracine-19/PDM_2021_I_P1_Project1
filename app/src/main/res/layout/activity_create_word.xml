<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context=".CreateWordActivity">

    <TextView
        android:id="@+id/txvWriteAWord"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/codeprobold"
        android:text="WRITE A WORD"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlayAgain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnSave"
        android:layout_width="74dp"
        android:layout_height="0dp"
        android:layout_marginBottom="129dp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHint"
        app:srcCompat="@drawable/ic_save" />

    <EditText
        android:id="@+id/editTextHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:fontFamily="@font/codeprobold"
        android:hint="Food"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#595757"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="84dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/codeprobold"
        android:text="ADD A HINT"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/editTextHint"
        app:layout_constraintEnd_toEndOf="@+id/editTextHint"
        app:layout_constraintStart_toStartOf="@+id/editTextHint"
        app:layout_constraintTop_toBottomOf="@+id/editTextTypeAWord" />

    <EditText
        android:id="@+id/editTextTypeAWord"
        android:layout_width="333dp"
        android:layout_height="76dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:fontFamily="@font/codeprobold"
        android:hint="TYPE A WORD"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvWriteAWord" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/writegif"
        android:layout_width="221dp"
        android:layout_height="124dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/write"
        app:layout_constraintBottom_toTopOf="@+id/editTextTypeAWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/write" />

</androidx.constraintlayout.widget.ConstraintLayout>